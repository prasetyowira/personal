---
import { getLocalizedUrl, useTranslations } from '@utils/i18n';

interface Props {
  locale: 'en' | 'ja';
}

const { locale } = Astro.props;
const t = useTranslations(locale);
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: locale === 'ja' ? 'ナビゲーション' : 'Navigation',
    links: [
      { label: t('nav.home'), url: getLocalizedUrl(locale, '/') },
      { label: t('nav.projects'), url: getLocalizedUrl(locale, '/projects') },
      { label: t('nav.blog'), url: getLocalizedUrl(locale, '/blog') },
      { label: t('nav.about'), url: getLocalizedUrl(locale, '/about') },
      { label: t('nav.contact'), url: getLocalizedUrl(locale, '/contact') },
    ]
  },
  {
    title: locale === 'ja' ? 'ソーシャル' : 'Social',
    links: [
      { label: 'GitHub', url: 'https://github.com/prasetyowira' },
      { label: 'LinkedIn', url: 'https://linkedin.com/in/ariwira' },
    ]
  }
];
---

<footer class="terminal-footer border-t pt-8 pb-6" style="border-color: var(--border-color);">
  <div class="container-custom">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-8">
      <div>
        <h3 class="text-xl font-jetbrains font-bold text-[--text-primary] mb-4">
          <span class="text-[--accent-green]">wira@portfolio</span>:<span class="text-[--accent-blue]">~</span>$
        </h3>
        <p class="text-[--text-secondary] mb-4">
          {locale === 'ja' ? 'エンジニアとしての経験と技術について' : 'Showcasing my journey and skills as a software engineer'}
        </p>
        <div class="flex space-x-4">
          <a href="https://github.com/prasetyowira" target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="text-[--text-secondary] hover:text-[--accent-green] transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          <a href="https://linkedin.com/in/ariwira" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="text-[--text-secondary] hover:text-[--accent-green] transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>
      
      {footerLinks.map(section => (
        <div>
          <h4 class="text-lg font-jetbrains font-semibold text-[--accent-green] mb-4">
            {section.title}:
          </h4>
          <ul class="space-y-2">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.url} 
                  class="text-[--text-secondary] hover:text-[--accent-green] transition-colors"
                >
                  {`> ${link.label}`}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <div>
        <h4 class="text-lg font-jetbrains font-semibold text-[--accent-green] mb-4">
          {locale === 'ja' ? 'お問い合わせ' : 'Contact'}:
        </h4>
        <p class="text-[--text-secondary] mb-2">
          {locale === 'ja' ? 'お気軽にご連絡ください:' : 'Feel free to reach out:'}
        </p>
        <a href="mailto:hello@ariwira.me" class="text-[--text-secondary] hover:text-[--accent-green] transition-colors">
          hello@ariwira.me
        </a>
      </div>
    </div>
    
    <div class="pt-6 mt-6 border-t flex flex-col md:flex-row justify-between items-center" style="border-color: var(--border-color);">
      <div class="terminal-prompt font-jetbrains">
        <span class="text-[--text-secondary]">[</span>
        <span class="text-[--accent-green]">prasetyowira@portfolio</span>
        <span class="text-[--text-secondary]">]$</span>
        <span class="text-[--text-primary] ml-2">echo "&copy; {currentYear} Prasetyo Wira Portfolio. {locale === 'ja' ? '全著作権所有。' : 'All rights reserved.'}"</span>
      </div>
      
      <div class="flex items-center mt-4 md:mt-0">
        <a href={locale === 'ja' ? '/' : '/ja/'} class="text-[--text-secondary] hover:text-[--accent-green] transition-colors text-sm">
          {locale === 'ja' ? 'English' : '日本語'}
        </a>
      </div>
    </div>
  </div>
</footer>

<style>
  .terminal-footer {
    font-family: 'JetBrains Mono', monospace;
  }
</style> 