---
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
  locale: 'en' | 'ja';
}

const { project, locale } = Astro.props;
const isJapanese = locale === 'ja';
---

<div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transition-transform hover:translate-y-[-5px]">
  {project.data.image && (
    <img 
      src={project.data.image} 
      alt={project.data.title} 
      class="w-full h-48 object-cover" 
      onError="this.src='/images/projects/placeholder.svg'"
    />
  )}
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2 text-gray-900 dark:text-white">{project.data.title}</h3>
    <p class="text-gray-700 dark:text-gray-300 mb-4">{project.data.description}</p>
    {project.data.technologies && (
      <div class="flex flex-wrap gap-2 mb-4">
        {project.data.technologies.slice(0, 3).map((tech: string) => (
          <span class="text-xs bg-blue-100 text-blue-800 dark:bg-blue-900 dark:text-blue-100 rounded-full px-2 py-1">{tech}</span>
        ))}
        {project.data.technologies.length > 3 && (
          <span class="text-xs bg-gray-200 dark:bg-gray-700 rounded-full px-2 py-1 text-gray-800 dark:text-gray-200">+{project.data.technologies.length - 3}</span>
        )}
      </div>
    )}
    <div class="flex justify-between items-center">
      <a 
        href={`/${locale === 'en' ? '' : 'ja/'}projects/${project.slug}`} 
        class="text-blue-600 dark:text-blue-400 hover:underline"
      >
        {isJapanese ? 'プロジェクトを見る →' : 'View Project →'}
      </a>
      {project.data.github && (
        <a 
          href={project.data.github} 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-blue-600 dark:text-gray-400 dark:hover:text-blue-400 transition-colors"
          aria-label="GitHub"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
        </a>
      )}
    </div>
  </div>
</div> 